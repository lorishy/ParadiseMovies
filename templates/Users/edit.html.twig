{% extends 'base.html.twig' %}

{% block title %}Modifier Profil{% endblock %}

{% block body %}
{% include('vod/partials/header.html.twig') %}

    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Modifier Profil</h1>

                {{ form_start(form) }}
                    <fieldset class="mb-3">
                        <legend>Mon identité</legend>
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.email) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend>Mes coordonnées</legend>
                        {{ form_row(form.address) }}
                        {{ form_row(form.zipcode) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.image) }}
                    </fieldset>
                    <button type="submit" class="btn btn-primary btn-lg my-3">Modifier</button>
                {{ form_end(form) }}            
            </div>
        </div>
    </section>
{% include('vod/partials/footer.html.twig') %}

{% endblock %}
