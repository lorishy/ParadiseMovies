<div class="card my-5">
  <div class="card-body">
    <h2>Avis</h2>
    {% if avis is not empty %}
      <ul class="list-group">
        {% for avisItem in avis %}
          <li class="list-group-item">
            <div class="d-flex align-items-start">
              <img src="{{ asset('/uploads/users_images/' ~ avisItem.user.image) }}" class="rounded-circle me-3" alt="Photo de profil" style="width: 65px; height: 65px;">
              <div>
                <p>{{ avisItem.note }}/5 {{ avisItem.user.lastname }} {{ avisItem.user.firstname }}</p>
                <p>{{ avisItem.description }}</p>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p class="text-center">Aucun avis pour le moment.</p>
    {% endif %}
  </div>
  <div class="card-footer text-center">
    {% if app.user %}
      <h2>Ajouter un avis</h2>
      {{ form_start(formAvie, {'attr': {'class': 'mt-4'}}) }}
      <div class="form-group mb-4">
        {{ form_label(formAvie.note, 'Note', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(formAvie.note, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group mb-4">
        {{ form_label(formAvie.description, 'Description') }}
        {{ form_widget(formAvie.description, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
        <input type="submit" value="Ajouter" class="btn btn-primary w-100">
      </div>
      {{ form_end(formAvie) }}
    {% else %}
      <p>Connectez-vous pour ajouter un avis.</p>
    {% endif %}
  </div>
</div>
