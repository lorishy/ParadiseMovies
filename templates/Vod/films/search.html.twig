{% extends 'base.html.twig' %}

{% block title %}Recherche de films{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .ui-autocomplete {
            background-color: #fff;
            border: 1px solid #ccc;
            padding: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include('vod/partials/header.html.twig') %}

    <div class="container">
        <h1 class="my-4">Recherche de films</h1>

        <form action="{{ path('films_search') }}" method="get">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="q" placeholder="Rechercher un film">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </div>
        </form>

        {% if films is empty %}
            <p>Aucun film trouvé pour cette recherche.</p>
        {% else %}
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for film in films %}
                    <div class="col">
                        <div class="card h-100">
                            <img src="{{ asset('uploads/films_images/' ~ film.image) }}" class="card-img-top" alt="{{ film.titre }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ film.titre }}</h5>
                                <p class="card-text">{{ film.description }}</p>
                                <a href="{{ path('films_show', {titre: film.titre}) }}" class="btn btn-primary">Voir le film</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="d-flex justify-content-between my-4">
            <a href="{{ path('app_home') }}" class="btn btn-primary">
                Retour à l'accueil
            </a>
            <a href="{{ path('films_add') }}" class="btn btn-success">
                Ajouter un nouveau film
            </a>
        </div>
    </div>

    {% include('vod/partials/footer.html.twig') %}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <script>
        $(document).ready(function() {
            var filmsTitres = [
                {% for film in films %}
                    "{{ film.titre }}",
                {% endfor %}
            ];

            $("input[name='q']").autocomplete({
                source: filmsTitres
            });
        });
    </script>
{% endblock %}
