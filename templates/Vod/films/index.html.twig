{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    {% include('vod/partials/header.html.twig') %}

    <div class="container">
        <h1 class="my-4">Films disponibles</h1>

        {% if films is empty %}
            <p>Aucun film disponible pour le moment.</p>
        {% else %}
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for film in films %}
                    <div class="col">
                        <div class="card h-100">
                            <img src="{{ asset('uploads/films_images/' ~ film.image) }}" class="card-img-top" alt="{{ film.titre }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ film.titre }}</h5>
                                <p class="card-text">{{ film.description }}</p>
                                <a href="{{ path('films_show', {titre : film.titre}) }}" class="btn btn-primary">Voir le film</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="d-flex justify-content-between my-4">
            <a href="{{ path('app_home') }}" class="btn btn-primary">
                Retour Ã  l'accueil
            </a>
            <a href="{{ path('films_add') }}" class="btn btn-success">
                Ajouter un nouveau film
            </a>
        </div>
    </div>

    {% include('vod/partials/footer.html.twig') %}
{% endblock %}
