{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .ui-autocomplete {
            position: absolute;
            z-index: 1000;
            padding: 5px;
            background-color: #fff;
            border: 1px solid #ccc;
            max-height: 150px;
            overflow-y: auto;
        }
        
        /* Fixe la largeur de l'input */
        .input-group .form-control {
            width: 300px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include('vod/partials/header.html.twig') %}

    <style>
        .card.scale-up:hover {
            transform: scale(1.05);
        }

        .transition {
            transition: transform 0.3s;
        }
    </style>

    <div class="container">
        <h1 class="my-4"> Films disponibles</h1>

        <form action="{{ path('films_search') }}" method="get">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="q" placeholder="Rechercher un film">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </div>
        </form>

        {% if films is empty %}
            <p>Aucun film trouvé pour cette recherche.</p>
        {% else %}
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for film in films %}
                    <div class="col-md-2 mb-4">
                        <a href="{{ path('films_show', {titre: film.titre}) }}">
                            <div class="card h-100 scale-up transition">
                                <img src="{{ asset('uploads/films_images/' ~ film.image) }}" class="card-img-top" alt="{{ film.titre }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ film.titre }}</h5>
                                    {# <p class="card-text">{{ film.description }}</p> #}
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="d-flex justify-content-between my-4">
            <a href="{{ path('app_home') }}" class="btn btn-primary">
                Retour à l'accueil
            </a>
            {% if app.user and is_granted('ROLE_ADMIN') %}
                <a href="{{ path('films_add') }}" class="btn btn-success">
                    Ajouter un nouveau film
                </a>
            {% endif %}
        </div>
    </div>

    {% include('vod/partials/footer.html.twig') %}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <script>
        $(document).ready(function() {
            var filmsTitres = [
                {% for film in films %}
                    "{{ film.titre }}",
                {% endfor %}
            ];

            $("input[name='q']").autocomplete({
                source: filmsTitres,
                appendTo: ".input-group",
                open: function(event, ui) {
                    $(".ui-autocomplete").css("position", "relative");
                }
            });
        });
    </script>
{% endblock %}
