{% extends 'base.html.twig' %}

{% block body %}
	{% include('vod/partials/header.html.twig') %}

    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="card-title text-center mb-4">Modifier le film {{film.titre}}</h1>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        {{ form_start(form, {'method': 'PUT'}) }}
                            <div class="form-group">
                                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(form.duree, 'Durée', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                            </div> 
                            <div class="form-group mb-4">
                                {{ form_label(form.sortie, 'Date de sorite', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.sortie, {'attr': {'class': 'form-control'}}) }}
                            </div>                                           
                            <div class="form-group mb-4">
                                {{ form_label(form.video, 'Lien Vidéo', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.video, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(form.categorie, 'Catégories', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                            </div>     
                            <div class="form-group mb-4">
                                {{ form_label(form.casting, 'Casting', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.casting, {'attr': {'class': 'form-control'}}) }}
                            </div>                      
                            <input type="submit" value="Modifier" class="btn btn-primary w-100">
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>    

      {% include('vod/partials/footer.html.twig') %}
{% endblock %}

