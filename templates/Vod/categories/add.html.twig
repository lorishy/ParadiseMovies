{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
  {% include('vod/partials/header.html.twig') %}
  {% for flashType, flashMessages in app.flashes %}
  {% for flashMessage in flashMessages %}
    {% set alertClass = flashType == 'success' ? 'alert-success' : 'alert-danger' %}
     <div class="alert {{ alertClass }} text-center">{{ flashMessage }}</div>
    {% endfor %}    
    {% endfor %}

  <div class="container">
    <div class="card mt-4">
      <div class="card-header">
        <h1 class="text-center mb-0">Ajouter une catégorie</h1>
      </div>
      <div class="card-body">
        <div class="row justify-content-center">
          <div class="col-md-6">
            {{ form_start(form) }}
              <div class="form-group mb-4">
                {{ form_label(form.libelle, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
              </div>
              {# <div class="form-group mb-4">
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
              </div> #}
              <input type="submit" value="Ajouter" class="btn btn-primary">
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>

    {% include('vod/partials/footer.html.twig') %}
{% endblock %}
