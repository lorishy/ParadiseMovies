{% extends 'base.html.twig' %}

{% block body %}
	{% include('vod/partials/header.html.twig') %}

    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="card-title text-center mb-4">Modifier la categorie {{categorie.libelle}}</h1>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        {{ form_start(form, {'method': 'PUT'}) }}
                            <div class="form-group mb-4">
                                {{ form_label(form.libelle, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                            </div>                                  
                            <div class="form-group mb-4">
                                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
                            </div>                    
                            <input type="submit" value="Modifier" class="btn btn-primary w-100">
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>    

      {% include('vod/partials/footer.html.twig') %}
{% endblock %}

