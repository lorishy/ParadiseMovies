{% extends 'base.html.twig' %}

{% block title %}Séries{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .ui-autocomplete {
            position: absolute;
            z-index: 1000;
            padding: 5px;
            background-color: #fff;
            border: 1px solid #ccc;
            max-height: 150px;
            overflow-y: auto;
        }
        
        /* Fixe la largeur de l'input */
        .input-group .form-control {
            width: 300px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include('vod/partials/header.html.twig') %}

  <style>
    .card.scale-up:hover {
      transform: scale(1.05);
    }

    .transition {
      transition: transform 0.3s;
    }
  </style>

    <div class="container">
        <h1 class="my-4">Séries disponibles</h1>

        <form action="#" method="get">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="q" placeholder="Rechercher un serie">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </div>
        </form>

    {% if series is empty %}
      <p>Aucune série disponible pour le moment.</p>
    {% else %}
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for serie in series %}
          <div class="col-md-2 mb-4">
            <a href="{{ path('series_show', {titre: serie.titre}) }}?saison=1">
              <div class="card h-100 scale-up transition">
                <img src="{{ asset('uploads/series_images/' ~ serie.titre|replace({' ': '_'}) ~ '/' ~ serie.image) }}" class="card-img-top img-fluid" alt="{{ serie.titre }}">
                <div class="card-body">
                  <h5 class="card-title">{{ serie.titre }}</h5>
                  <p class="card-text">{{ serie.description }}</p>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    <div class="navigation flex justify-center mb-8">
      <nav aria-label="Page navigation">
        <ul class="pagination">
          {{ knp_pagination_render(series) }}
        </ul>
      </nav>
    </div>

    <div class="d-flex justify-content-between my-4">
      <a href="{{ path('app_home') }}" class="btn btn-primary">
        Retour à l'accueil
      </a>
      {% if app.user and is_granted('ROLE_ADMIN') %}
          <a href="{{ path('series_add') }}" class="btn btn-success">
              Ajouter une nouvelle série
          </a>
      {% endif %}
    </div>
  </div>

  {% include('vod/partials/footer.html.twig') %}
{% endblock %}
