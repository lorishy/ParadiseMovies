{% extends 'base.html.twig' %}

{% block title %}Ajouter une serie{% endblock %}

{% block body %}
  {% include('vod/partials/header.html.twig') %}

  <div class="container">
    <div class="card mt-4">
      <div class="card-header">
        <h1 class="text-center mb-0">Ajouter une serie</h1>
      </div>
      <div class="card-body">
        <div class="row justify-content-center">
          <div class="col-md-6">
            {{ form_start(form) }}
              <div class="form-group">
                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
              </div>
              <input type="submit" value="Ajouter" class="btn btn-primary">
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>

  {% include('vod/partials/footer.html.twig') %}

{% endblock %}
