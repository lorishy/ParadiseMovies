{% extends 'base.html.twig' %}

{% block body %}
    {% include 'vod/partials/header.html.twig' %}

    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="card-title text-center mb-4">Modifier la série {{serie.titre}}</h1>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        {{ form_start(form, {'method': 'PUT'}) }}
                            <div class="form-group">
                                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control mb-3'}}) }}
                            </div>
                            <input type="submit" value="Modifier" class="btn btn-primary w-100">
                        {{ form_end(form) }}
                        <h2>Episodes</h2>
                        <ul>
                            {% for episode in serie.episodes %}
                                <li>{{ episode.titre }} - {{ episode.description }} - {{ episode.duree|date('H:i:s') }} - </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card my-5" id="card-add-episode">
            <div class="card-body">
                <h2 class="card-title text-center">Ajouter un épisode</h2>
                {% include 'vod/episodes/add.html.twig' with {'formEpisode': formEpisode} %}
            </div>
        </div>
    </div>

  {% include('vod/partials/footer.html.twig') %}

{% endblock %}
